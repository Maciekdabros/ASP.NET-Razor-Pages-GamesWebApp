@page
@model GamesWebApp.Pages.Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit Game</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.GameID" />
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Price" class="control-label"></label>
                <input asp-for="Game.Price" class="form-control" />
                <span asp-validation-for="Game.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Category" class="control-label"></label>
                <input asp-for="Game.Category" class="form-control" />
                <span asp-validation-for="Game.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Description" class="control-label"></label>
                <input asp-for="Game.Description" class="form-control" />
                <span asp-validation-for="Game.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="FileUpload.FormFile" type="file">
            </div>
            <div class="form-group">
                <label asp-for="Game.Type" class="control-label"></label>
                <select asp-for="Game.Type" class="form-control">

                    <option value="">-- Select Type --</option>
                    <option value="0">Exchange</option>
                    <option value="1">Sale</option>

                </select>
                <span asp-validation-for="Game.Type" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Game.Platform" class="control-label"></label>
                <select asp-for="Game.PlatformID" class="form-control"
                        asp-items="@Model.PlatformNameSL"></select>
                <span asp-validation-for="Game.PlatformID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
